<% extend 'layout.ect' %>

<main class="w-100 h-100 flex flex-wrap items-center justify-center bg-black-05">
	<div class="w-80-l flex flex-wrap mb2">
		<section class="w-40-l w-100 pl0-l pr3-l ph4 mv4 mv0-l">
			<h1 class="f1 mv2 fw7">Bike Tour</h1>
			<h2 class="f2 mv2 fw5">from June to September</h2>
			<h3 class="f4 mv2 fw3">I'll be travelling with my girlfriend from Barcelona to Hamburg by üö¥‚Äç‚ôÇÔ∏è</h3>
			<p class="lh-copy">
				I would love to speak at a local meetup while I'm there. If you are an organizer and you like one of <a href="/talks.html">these talks</a>, please <a href="https://twitter.com/messages/compose?recipient_id=321182179" target="_blank" class="">contact me</a>.
			</p>
			<p class="lh-copy">
				Also, if you are going to <a href="https://www.bus-conf.org/">BusConf</a>, I'll see you there!
			</p>
			<p>
				<a class="b f4" href="https://www.instagram.com/sherman3ero_/" target="_blank">Follow the tour on Instagram</a>
			</p>
		</section>
		<section class="w-60-l w-100">
			<div class="aspect-ratio aspect-ratio--wide-l vh-50 h-auto-l">
				<div id="map" class="aspect-ratio--object" style="background-color: #d8d8d8"></div>
			</div>
		</section>
	</div>

	<section class=" w-100 self-start mb2 flex items-center">
		<div id="scroll-left-button" class="w-10-l dn db-l tr pr3 f1 pointer serif"><</div>
		<div id="location-card-holder" class=" w-100 w-80-l vh-50 h-auto-l flex flex-nowrap-l flex-wrap overflow-scroll">
			<% for place in @places : %>
				<div class="location-card pointer flex-none w5-l w-80 h4 center mr4-l mv2 pl4 bg-white flex flex-column justify-center">
					<h2 class="mv2"><%- place[0]%></h2>
					<span><%- place[1]%></span>
				</div>
			<% end %>
		</div>
		<div id="scroll-right-button" class="w-10-l dn db-l pl3 f1 pointer serif">></div>
	</section>
</main>

<% block 'javascript' : %>
	<script>
		const places = <%- JSON.stringify(@places) %>;
	</script>
	<script src="/js/bikes.js"></script>
	<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDR_OZx68rq78EOKwmtMQjelIjRGTn77vM&callback=initMap"></script>
<% end %>

